# WooCommerce API
WOO_URL=https://aquafloragroshop.com.br
WOO_CONSUMER_KEY=ck_your_key_here
WOO_CONSUMER_SECRET=cs_your_secret_here

# Paths
INPUT_DIR=./data/input
OUTPUT_DIR=./data/output
DB_PATH=./products.db

# Processing
SYNC_ENABLED=true
DRY_RUN=false
INCLUDE_ZERO_STOCK=true
MIN_PRICE=0.01

# Safety
PRICE_GUARD_MAX_VARIATION=40
ZERO_GHOST_STOCK=true

# Notifications (leave empty to disable)
DISCORD_WEBHOOK_URL=
TELEGRAM_WEBHOOK_URL=

# Discord Bot (for incoming commands)
DISCORD_BOT_TOKEN=
DISCORD_CHANNEL_ID=

# Dashboard Authentication (optional)
DASHBOARD_AUTH_ENABLED=false
DASHBOARD_USERNAME=admin
DASHBOARD_PASSWORD=change_me_please

# Logging
LOG_LEVEL=INFO
LOG_ROTATION_MB=10
LOG_TO_STDOUT=true

# Image Scraper (Google Custom Search - optional, uses DuckDuckGo if not set)
# Get API Key: https://console.cloud.google.com/apis/credentials
# Get Search Engine ID: https://programmablesearchengine.google.com/
GOOGLE_API_KEY=
GOOGLE_SEARCH_ENGINE_ID=

# Backup to Cloud (optional, requires rclone)
# Install: curl https://rclone.org/install.sh | sudo bash
# Configure: rclone config (setup 'gdrive' remote)
BACKUP_ENABLED=false
BACKUP_RCLONE_REMOTE=gdrive:aquaflora-backup
BACKUP_RETENTION_DAYS=7

# ============================================================
# UPLOAD DE IMAGENS PARA O SERVIDOR
# ============================================================
# URL pública onde as imagens ficarão acessíveis
# OBRIGATÓRIO para que o CSV tenha URLs funcionais!
IMAGE_BASE_URL=https://aquafloragroshop.com.br/wp-content/uploads/produtos/

# Pasta no servidor onde as imagens serão salvas
IMAGE_REMOTE_PATH=/home/aquaflora/public_html/wp-content/uploads/produtos/

# Credenciais FTP/SFTP do servidor
IMAGE_FTP_HOST=aquafloragroshop.com.br
IMAGE_FTP_USER=usuario_ftp
IMAGE_FTP_PASSWORD=sua_senha_aqui
IMAGE_FTP_PORT=21

# Use SFTP (SSH) em vez de FTP padrão? (mais seguro)
IMAGE_USE_SFTP=false
